    <main class="container mt-2">
        <!-- <section class="text-center mb-2">
            <h1>Welcome to PowerWeld Hub</h1>
            <p class="text-gray">Discover our premium selection of welding equipment</p>
        </section> -->

        <section class="grid">
            <% products.forEach(product => { %>
                <article class="card">
                    <img src="<%= product.image %>" class="card-img" alt="<%= product.name %>">
                    <div class="card-body">
                        <h3 class="mb-1"><%= product.name %></h3>
                        <div class="d-flex justify-between align-center">
                            <span class="h2">â‚¹<%= product.price.toFixed(2) %></span>
                            <span class="badge <%= product.inStock ? 'badge-success' : 'badge-danger' %>">
                                <%= product.inStock ? 'In Stock' : 'Out of Stock' %>
                            </span>
                        </div>
                    </div>
                </article>
            <% }); %>
        </section>
    </main>
</body>
</html>